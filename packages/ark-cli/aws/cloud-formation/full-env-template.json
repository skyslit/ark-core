    },
    "dbService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "LaunchType": "FARGATE",
        "Cluster": {
          "Ref": "ecsCluster"
        },
        "PlatformVersion": "1.4.0",
        "ServiceName": {
          "Fn::Sub": [
            "${ProjectNameStr}-db-service",
            {
              "ProjectNameStr": {
                "Ref": "AWS::StackName"
              }
            }
          ]
        },
        "ServiceRegistries": [
          {
            "RegistryArn": {
