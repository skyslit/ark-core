    },
    "httpListenerRule": {
      "Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
      "Properties": {
        "Conditions": [
          {
            "Field": "path-pattern",
            "PathPatternConfig": {
              "Values": ["/**"]
            }
          }
        ],
        "Actions": [
          {
            "Type": "forward",
            "Order": 1,
            "TargetGroupArn": {
              "Ref": "targetGroup"
            }
          }
        ],
        "ListenerArn": {
          "Ref": "httpListener"
        },
        "Priority": 1
      },
      "Metadata": {
