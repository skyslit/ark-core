    "appService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "LaunchType": "FARGATE",
        "Cluster": {
          "Ref": "ecsCluster"
        },
        "PlatformVersion": "1.4.0",
        "ServiceName": {
          "Fn::Sub": [
            "${ProjectNameStr}-service",
            {
              "ProjectNameStr": {
                "Ref": "AWS::StackName"
              }
            }
          ]
        },
        "SchedulingStrategy": "REPLICA",
        "DesiredCount": 1,
        "DeploymentController": {
          "Type": "ECS"
        },
        "TaskDefinition": {
          "Ref": "taskDef"
        },
        "LoadBalancers": [
          {
            "ContainerName": "web-app-container",
            "ContainerPort": 80,
            "TargetGroupArn": {
              "Ref": "targetGroup"
            }
          }
        ],
        "NetworkConfiguration": {
          "AwsvpcConfiguration": {
            "AssignPublicIp": "ENABLED",
            "SecurityGroups": [
              {
                "Fn::GetAtt": ["securityGroup", "GroupId"]
              }
            ],
            "Subnets": [
              {
                "Fn::Select": [
                  "0",
