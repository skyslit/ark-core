    "ecsTaskExecutionPolicy": {
      "Description": "Setting IAM policy for service role for CodePipeline",
      "Properties": {
        "PolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "ecr:GetAuthorizationToken",
                "ecr:BatchCheckLayerAvailability",
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": "*"
            }
          ]
        },
        "PolicyName": {
          "Fn::Sub": [
            "${ProjectNameStr}-ecs-task-execution-policy",
            {
              "ProjectNameStr": {
                "Ref": "AWS::StackName"
              }
            }
          ]
        },
        "Roles": [
          {
            "Ref": "ecsTaskExecutionRole"
          }
        ]
      },
      "Type": "AWS::IAM::Policy",
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "60dadbce-9b7f-469e-be8e-c9aa6c714536"
        }
      }
    },
    "ecsTaskExecutionRole": {
      "Description": "Creating service role in IAM for AWS ECS",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": "ecs-tasks.amazonaws.com"
              }
            }
          ]
        },
        "Path": "/",
        "RoleName": {
          "Fn::Sub": [
            "${ProjectNameStr}-ecs-task-execution-role",
            {
              "ProjectNameStr": {
                "Ref": "AWS::StackName"
              }
            }
          ]
        }
      },
      "Type": "AWS::IAM::Role",
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "1a8a47f5-ce00-4323-ac3e-37cdc5b85225"
        }
      }
    },
    "taskDef": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "RequiresCompatibilities": ["FARGATE"],
        "ExecutionRoleArn": {
          "Fn::GetAtt": ["ecsTaskExecutionRole", "Arn"]
        },
        "ContainerDefinitions": [
          {
            "Image": "nginx:latest",
            "Environment": [
              {
                "Name": "MONGO_CONNECTION_STRING",
                "Value": {
                  "Fn::Sub": [
                    "mongodb://${stackName}-db.${stackName}-local:27017/default",
                    {
                      "stackName": {
                        "Ref": "AWS::StackName"
                      }
                    }
                  ]
                }
              }
            ],
            "MountPoints": [
              {
                "ContainerPath": "/app/user-uploads",
                "ReadOnly": false,
                "SourceVolume": "efs-mnt"
              }
            ],
            "Name": "web-app-container",
            "PortMappings": [
              {
                "ContainerPort": 80,
                "HostPort": 80
              }
            ],
            "Privileged": false
          }
        ],
        "Cpu": "256",
        "Family": {
          "Fn::Sub": [
            "${ProjectNameStr}-task-def",
            {
              "ProjectNameStr": {
                "Ref": "AWS::StackName"
              }
            }
          ]
        },
        "Memory": "512",
        "NetworkMode": "awsvpc",
        "Volumes": [
          {
            "Name": "efs-mnt",
            "EFSVolumeConfiguration": {
              "FilesystemId": {
                "Ref": "fileSystem"
              },
              "RootDirectory": "/"
            }
          }
        ]
      },
      "DependsOn": ["ecsTaskExecutionPolicy"],
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "77040f03-aa43-4243-b0b2-2bc5d41705f1"
        }
      }
    },
    "dbTaskDef": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "RequiresCompatibilities": ["FARGATE"],
        "ExecutionRoleArn": {
          "Fn::GetAtt": ["ecsTaskExecutionRole", "Arn"]
        },
        "ContainerDefinitions": [
          {
            "Image": "mongo:4.2",
            "MountPoints": [
              {
                "ContainerPath": "/data/db",
                "ReadOnly": false,
                "SourceVolume": "efs-mnt"
              }
            ],
            "Name": "db-container",
            "PortMappings": [
              {
                "ContainerPort": 27017,
                "HostPort": 27017
              }
            ],
            "Privileged": false
          }
        ],
        "Cpu": "256",
        "Family": {
          "Fn::Sub": [
            "${ProjectNameStr}-db-task-def",
            {
              "ProjectNameStr": {
                "Ref": "AWS::StackName"
              }
            }
          ]
        },
        "Memory": "512",
        "NetworkMode": "awsvpc",
        "Volumes": [
          {
            "Name": "efs-mnt",
            "EFSVolumeConfiguration": {
              "FilesystemId": {
                "Ref": "dbFileSystem"
              },
              "RootDirectory": "/"
            }
          }
        ]
      },
      "DependsOn": ["ecsTaskExecutionPolicy"]
    },
